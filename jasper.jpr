(mac zap (f place 'args)
  `(= ,place (,f ,place ,@args)))

(def pair (xs)
  (with (ys ()
	 i 0)
    (while (< i xs.length)
      (ys.push (list (get xs i) (get xs (+ i 1))))
      (zap + i 2))
    ys))

(def list2obj (args)
  (let res (Object)
    (map (fn ((k v)) (= (get res k) v))
	 args)
    res))

(mac obj ('args)
  `(list2obj (list ,@(map (fn ((k v))
                            `(list ',k ,v))
                          (pair args)))))
(mac each (i v xs 'body)
  `(let ,i 0
     (while (< ,i (, xs).length)
       ,@(macex (obj symmacs (list2obj (list v (fn () `(get ,xs ,i)))))
		`(do ,@body))
       (++ ,i))))

(mac callback (to from 'body)
  `(,@to (fn ,from ,@body)))


