(def map1 (f xs)
  (var= ys ())
  (for (var= i 0) (< i xs.length) (++ i)
       (ys.push (f (get xs i))))
  ys)

(def map (f 'xss)
  (if (is xss.length 1)
      (map1 f (get xss 0))
      (do
	(var= length (apply Math.min (map1 (fun "" (x) x.length) xss)))
	(var= ys ())
	(for (var= i 0) (< i length) (++ i)
	     (ys.push (apply f (map1 (fun "" (x) (get x i)) xss))))
	ys)))

