(def map1 (f xs)
  (().map.call xs (fun "" (x) (f x))))

(def map (f 'xss)
  (if (is xss.length 1)
      (map1 f (get xss 0))
      (with (length (apply Math.min (map1 (fun "" (x) x.length) xss))
	     ys ()
	     i 0)
	(while (< i length)
	  (ys.push (apply f (map1 (fun "" (x) (get x i)) xss)))
	  (++ i))
	ys)))

(def mapcat (f 'xss)
  (apply cat (apply map f xss)))

(def quote (a)
  (JSON.stringify a))

(def runqq (a)
  (if (alist a)
      (if (is (get a 0) ',@)
	  (get a 1)
	  (is (get a 0) ',)
	  (list 'list (get a 1))
	  (list 'list (cat '(cat) (map runqq a))))
      (cat '(list) (quote a))))

(mac ` (a)
    (list 'get (runqq a) 0))

(mac fn (args 'body)
  `(fun "" ,args ,@body))

(mac when (cond 'body)
